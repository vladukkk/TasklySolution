@{
    ViewBag.Title = "Головна";
}

<h2>Моя Lottie анімація</h2>

<div id="lottie-container" style="width: 300px; height: 300px;"></div>

<!-- Підключення Lottie Web -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.10.2/lottie.min.js"></script>

<script>
    var animation = lottie.loadAnimation({
        container: document.getElementById('lottie-container'), // елемент для виводу анімації
        renderer: 'svg',
        loop: true,
        autoplay: true,
        path: '/animations/SingingContract.json' // Шлях до файлу в wwwroot
    });
</script>
