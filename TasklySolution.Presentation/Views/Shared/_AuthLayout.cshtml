<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TasklySolution.Presentation</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TasklySolution.Presentation.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #FAFBFF;
            background: linear-gradient(to bottom, #f8f9ff, #e3e6f5);
        }

        .animated-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 50%; /* Збільшив трохи ширину */
            height: 100vh;
            background-color: #5A2FF1;
            clip-path: polygon(0 0, 100% 0, 80% 100%, 0% 100%);
        }
    </style>

</head>
<body>  

    <div class="main-page-container">
        <div class="animated-bg animate__animated animate__fadeInLeft">
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
