@model BusinessLogic.DTOs.Task.TaskDTO

<style>
    /* Оформлення контейнера для центрування */
    .task-card-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 300px; /* Вилучення маргіну зверху */
    }

    .task-card {
        width: 100%;
        max-width: 600px; /* Максимальна ширина картки */
        border-radius: 20px;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        background-color: var(--background-color);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        padding: 30px; /* Більші відступи всередині картки */
        box-sizing: border-box; /* Для точності розмірів */
    }

    .main {
        background-color: var(--div-color);
        border-radius: 20px;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .title {
        margin: 0;
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 15px;
    }

    .desc {
        color: var(--second-text-color);
        font-size: 16px;
        margin-top: 10px;
        padding: 10px;
        resize: none; /* Заборона зміни розміру textarea */
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
        height: 120px; /* Задаємо висоту textarea */
    }

    .date {
        color: var(--text-color);
        font-size: 18px;
        margin-left: auto;
        margin-top: 10px;
    }

    .up-row-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .row-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 15px;
    }

    .tag {
        background-color: #e0e0e0;
        padding: 5px 10px;
        border-radius: 10px;
        font-size: 14px;
    }

    /* Кнопки для виконання та видалення */
    .action-buttons {
        display: flex;
        margin-top: 20px;
    }
</style>

<div class="task-card-container">
    <div class="task-card" data-task-id="@Model.Id">
        <div class="up-row-container">
            @Html.Partial("_Priority", Model.Priority)
            <p class="date">@Model.CreatedAt.ToString("dd MMMM yyyy, HH:mm")</p>
        </div>
        <div class="main">
            <h3 class="title">@Model.Title</h3>
            <textarea class="desc" readonly>@Model.Description</textarea> <!-- textarea зроблене readonly для неможливості редагування -->
            <div class="row-container">
                <strong>Tags:</strong>
                @foreach (var tag in Model.Tags)
                {
                    @Html.Partial("_Tag", tag)
                }
            </div>
        </div>

        <!-- Кнопки для виконання та видалення завдання -->
        <div class="action-buttons">
            <form asp-action="CompleteTask" asp-controller="Tasks" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn">
                    <img src="~/Done.svg" alt="Execute" width="24" height="24" />
                </button>
            </form>

            <form asp-action="DeleteTask" asp-controller="Tasks" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn">delete</button>
            </form>
        </div>
    </div>
</div>
